
.Stats
  position absolute
  display inline-flex
  flex-direction column
  width 350px
  height 350px
  bottom 0px
  left 0px
  background-color $black
  border 0 solid $darkgrey
  border-width 5px 5px 0 0
  border-top-right-radius 10px
  transform translate(0px, 100%) translate(0px, -50px)
  transition transform 1s

  &.open
    transform translate(0px, 0px) translate(0px, 0px)

  > span
    width 100%
    height 48px
    color $lightgrey
    font-size 20px
    display flex
    justify-content center
    align-items center
    border-bottom 3px solid $darkgrey
    cursor pointer
  
  > .content
    display flex
    flex-direction column
    overflow-y auto
    height 300px
    > .stat
      display flex
      position relative
      > span
        display flex
        width 50%
        padding 5px
      > span:first-child
        justify-content flex-end
        padding-right 2.5px
        color $lightgrey
      > span:last-child
        justify-content flex-start
        padding-left 2.5px
        color $white
      &:not(:first-child)
        border-top 1px solid $darkgrey
      &.loading .Loading
        --size 25px
